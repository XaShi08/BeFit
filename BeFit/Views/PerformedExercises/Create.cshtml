@model PerformedExercise

@{
    ViewData["Title"] = "Dodaj wykonane ćwiczenie";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="ExerciseTypeId"></label>
        <select asp-for="ExerciseTypeId" class="form-control" asp-items="ViewBag.ExerciseTypeId"></select>
        <span asp-validation-for="ExerciseTypeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WorkoutSessionId"></label>
        <select asp-for="WorkoutSessionId" class="form-control" asp-items="ViewBag.WorkoutSessionId"></select>
        <span asp-validation-for="WorkoutSessionId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Weight"></label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Sets"></label>
        <input asp-for="Sets" class="form-control" />
        <span asp-validation-for="Sets" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Repetitions"></label>
        <input asp-for="Repetitions" class="form-control" />
        <span asp-validation-for="Repetitions" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Zapisz</button>
    <a asp-action="Index" class="btn btn-secondary">Wróć</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}