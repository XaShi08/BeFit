@model PerformedExercise

@{
    ViewData["Title"] = "Szczegóły ćwiczenia";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>PerformedExercise</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkoutSession)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkoutSession.UserId)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExerciseType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExerciseType.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Weight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Weight)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sets)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sets)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Repetitions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Repetitions)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a> |
    <a asp-action="Index">Powrót do listy</a>
</div>
